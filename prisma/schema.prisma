datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Species {
  id        Int     @default(autoincrement()) @id
  name      String

  pets Pet[]
}

model User {
  id        Int     @default(autoincrement()) @id
  email     String  @unique
  password  String
  name      String
  address   String?
  avatar    String?
  
  pets      Pet[]
}

model Pet {
  id            Int      @default(autoincrement()) @id
  name          String
  description   String?
  avatar        String?
  available     Boolean @default(false)

  user          User    @relation(fields: [userId], references: [id])
  userId        Int

  species Species @relation(fields: [speciesId], references: [id])
  speciesId Int
}